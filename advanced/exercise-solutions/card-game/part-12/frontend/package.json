{
    "author": "Andrea Arcuri and collaborators",
    "babel": {
        "plugins": [
            "@babel/plugin-proposal-class-properties"
        ], 
        "presets": [
            [
                "@babel/env", 
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ], 
            "@babel/react"
        ]
    }, 
    "dependencies": {
        "express": "4.17.1",
        "http-proxy-middleware": "1.0.5",
        "react": "16.12.0",
        "react-dom": "16.12.0", 
        "react-router": "5.1.2", 
        "react-router-dom": "5.1.2"
    }, 
    "devDependencies": {
        "@babel/cli": "7.7.4", 
        "@babel/core": "7.7.4", 
        "@babel/plugin-proposal-class-properties": "7.7.4", 
        "@babel/preset-env": "7.7.4", 
        "@babel/preset-react": "7.7.4", 
        "babel-jest": "24.9.0", 
        "babel-loader": "8.0.6", 
        "concurrently": "5.0.0", 
        "jest": "24.9.0",
        "jsdom": "15.2.1", 
        "nodemon": "2.0.1", 
        "react-addons-test-utils": "^15.6.2", 
        "webpack": "4.41.2",
        "webpack-cli": "3.3.10", 
        "webpack-dev-server": "3.9.0"
    }, 
    "engines": {
        "node": "^12.0.0"
    }, 
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.(js|jsx)"
        ], 
        "setupFilesAfterEnv": [
            "<rootDir>/tests/jest-setup.js"
        ], 
        "testEnvironment": "node", 
        "testRegex": "tests/.*-test\\.(js|jsx)$"
    }, 
    "license": "LGPL-3.0", 
    "main": "index.js", 
    "name": "card-game-frontend",
    "repository": {}, 
    "scripts": {
        "build": "webpack --mode production", 
        "dev": "DEV=true concurrently \"yarn watch:client\" \"yarn watch:server\"",
        "start": "node src/server/server.js", 
        "test": "jest --coverage", 
        "watch:client": "webpack --watch --mode development", 
        "watch:server": "nodemon src/server/server.js --watch src/server --watch public/bundle.js"
    }, 
    "version": "1.0.0"
}